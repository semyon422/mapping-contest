<%- render("breadcrumb", {items = {{"Home", "/"}, {"Contests"}}}) %>

<% local access_helper = require("access_helper") %>

<div class="container">
	<% if access_helper.rule("role_host") then %>
	<a href="#" hx-post="/contests">Create new contest</a>
	<% end %>

	<table class="table">
		<thead>
			<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			</tr>
		</thead>
		<tbody>
			<% for _, contest in ipairs(contests) do %>
				<% if contest.is_visible or contest.host_id == session.user_id then %>
					<tr>
						<th><%= contest.id %></th>
						<td>
							<a href="/contests/<%= contest.id %>"><%= contest.name %></a>
							<% if not contest.is_visible then %>
								(hidden)
							<% end %>
						</td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>
</div>
